<%= form_for(@article) do |f| %>
  <h1 class="mt-4 mb-5">ブログ投稿</h1>
    <form>
      <!--タイトル-->
      <div class="form-group mb-4">
        <label>title</label>
          <%= f.text_field :title ,class:'form-control' %>
      </div>
      <!--サブタイトル-->
      <div class="form-group mb-4">
        <label>subtitle</label>
          <%= f.text_area :subtitle ,class:'form-control' %>
      </div>
      <!--本文-->
      <div class="form-group mb-4">
        <label>text</label>
          <%= f.text_area :text ,class:'form-control' %>
      </div>
      <!--画像-->
      <div class="form-group mb-4">
        <label>image</label></br>
        　<%= f.file_field :image ,class: 'filestyle', "data-buttonText": "ファイル選択" %>
      </div>
      <!--送信ボタン-->
      <button type="submit" class="btn btn-outline-secondary text-secondary">SUBMIT</button>
    </form>
<% end %>