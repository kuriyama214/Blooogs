<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <%= image_tag @user.image %>

        <div class="form-group mb-4">
        　<%= f.file_field :image ,class: 'filestyle', "data-buttonText": "ファイル選択" %>
        </div>
      
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control" %>
        </div>
      </div>
      <div class="form-group mb-4">
        <label class='control-label'>Explanation</label>
          <%= f.text_area :explanation ,class:'form-control' %>
      </div>
      <div class="form-group mb-4">
        <label class='control-label'>Introduction</label>
          <%= f.text_area :introduction ,class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "UPDATE", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>