<div class="login_back">
  <h1 class="main-title">Blooogs</h1>
  <div class="log-in-inner">
    <h2 class="log-title">新規登録</h2>
    <hr color="#1e90ff">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <!--div class="field">　　デフォルトのフォーム
        <!%= f.label :email %><br />
        <!%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
      </div-->
        <div class="signup-form">
          <%= f.text_field :name, autofocus: true, placeholder: '名前', class: 'input form-control' %>
        </div>
        
        <div class="signup-form">
          <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'input form-control' %>
        </div>
        
        <div class="signup-form">
          <%= f.password_field :password, autofocus: true, placeholder: 'パスワード',autocomplete: 'new-password',class: 'input form-control' %>
          <% if @minimum_password_length %>
          <% end %><br />
        </div>
        
        <div>
          <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'パスワード再確認', autocomplete: 'new-password', class: 'input form-control' %>
        </div>
      <div>
        <%= f.submit class: 'signup_btn btn btn-outline-primary  withripple　btn-lg btn-block', value: '新規登録' %>
      </div>
    <% end %>
  </div>
</div>